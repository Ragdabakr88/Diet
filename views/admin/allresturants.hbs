                  <section class="content">
        <div class="container-fluid">
            <div class="block-header">
               
                  <div class="col-xs-6 col-sm-6 col-md-3 col-lg-3">
                     <button class="btn btn-success btn-lg btn-block waves-effect" type="button"> RESTURANTS <span class="badge">{{resturants.length}}</span></button>
                  </div>
                
                
            </div>
            <!-- Basic Examples -->
            <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <h2>
                                ALL RESTURANTS
                            </h2>

                        </div>
                        <div class="body">
                            <div class="table-responsive">
                                <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
                                    <thead>
                                        <tr>
                                            <th>Title</th>
                                            <th>Phone</th>
                                            <th>Address</th>
                                            <th>User</th>
                                            <th>Image</th>
                                            <th>Edit</th>
                                            <th>Delete</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Title</th>
                                            <th>Phone</th>
                                            <th>Address</th>
                                            <th>User</th>
                                            <th>Image</th>
                                            <th>Edit</th>
                                            <th>Delete</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        {{#each resturants}}
                                        <tr>
                                            <td><a href="/resturant/{{id}}">{{title}}</a></td>
                                            <td>+{{phone}}</td>
                                            <td>{{address}}</td>
                                            <td>{{user.name}}</td>
                                            <td><img src="/uploads/{{images.[0]}}" style="width: 50px;height:50px;"></td>
                                            <td><a href="/admin/resturants/edit/{{id}}"><button class="btn btn-warning btn-lg btn-block waves-effect" type="button">Edit </button></a></td>
                                            <td>
                                                <form action="/admin/resturants/delete/{{id}}?_method=DELETE"  method="post" >   
                                                 <button class="btn btn-danger" type="submit"><a style="color:#ffffff">Delete</a></button>
                                                </form> 
                                            </td>
                                        </tr>
                                        {{/each}}
                                    
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- #END# Basic Examples -->

            <!-- Pagination -->
          <ul class="pagination justify-content-center mb-4">
            {{#paginate current=current pages=pages}}{{/paginate}}
           </ul>
          
